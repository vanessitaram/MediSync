@page
@model MediSync.Pages.Medico.ExpedientesModel
@{
    Layout = null;
    ViewData["Title"] = "Panel Médico";
}

<link rel="stylesheet" href="~/css/medico/panel.css" />

<div class="dashboard-container">
    <header class="dashboard-header">
        <div class="header-content">
            <img src="~/lib/images/logob.png" alt="MediSync" class="logo-header" />
            <div>
                <h1 class="titulo">Panel Médico</h1>
                <p class="subtitulo">Bienvenido(a), <strong>@Model.Medico.Nombre</strong></p>
            </div>
        </div>
    </header>

    <section class="content-section">
        <h2 class="section-title">Pacientes recientes</h2>

        <div class="cards-container">
            @foreach (var exp in Model.Expedientes)
            {
                <div class="card-expediente">
                    <div class="card-icon">??</div>

                    <h3>@exp.Paciente?.Nombre</h3>

                    <div class="card-body">
                        <p><strong>Área:</strong> <span>@exp.Departamento?.Nombre</span></p>
                        <p><strong>Síntomas:</strong> <span>@exp.Sintomas</span></p>
                        <p><strong>Prediagnóstico:</strong> <span>@exp.Prediagnostico</span></p>
                        <p><strong>Fecha:</strong> <span>@exp.Fecha_Ingreso.ToShortDateString()</span></p>
                    </div>

                    <div class="card-footer">
                        <button type="button">Ver expediente</button>
                    </div>
                </div>
            }
        </div>
    </section>
</div>

<script src="~/js/medico/panel.js"></script>
